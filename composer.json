    "require": {
        "cloak/cloak": "~1.8",
        "peridot-php/peridot": "~1.15"
    },
    "require-dev": {
        "codegyre/robo": "~0.5",
        "cloak/robo-coveralls-kit": "~1.1",
        "expect/peridot-expect-plugin": "~2.0",
        "robo-peridot/robo-peridot": "~1.1",
        "phpspec/prophecy": "~1.4"
    },
    "autoload" : {
        "psr-4": {
            "cloak\\peridot\\" : "src/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
